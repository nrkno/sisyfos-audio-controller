{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["esnext", "dom"],
        "moduleResolution": "node",
        "allowJs": false,
        "strict": false,
        "isolatedModules": false,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "module": "commonjs",
        "outDir": "dist"
    },
    "include": ["../server", "../../shared"],
    "exclude": ["node_modules/*", "dist/*", "**/*.spec.ts"]
}
